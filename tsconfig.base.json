{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@full-stack-js/shared": ["packages/shared/src"],
			"@full-stack-js/shared/*": ["packages/shared/src/*"]
		},
		"types": ["node"],
		"resolveJsonModule": true
	},
	"files": [],
	"references": [
		{ "path": "./packages/shared" },
		{ "path": "./backend" },
		{ "path": "./frontend" }
	]
}
